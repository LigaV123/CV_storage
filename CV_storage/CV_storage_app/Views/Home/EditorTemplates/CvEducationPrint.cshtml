@using CV_storage.Core.Enums
@model List<EducationViewModel>

<h4><strong>Education</strong></h4>
@for (int i = 0; i < Model.Count; i++)
{
    <div>
        @{
            var endDate = String.IsNullOrEmpty(Model[i].EducationEndDate) ? "" : " - " + Model[i].EducationEndDate;
            var date = $"{Model[i].EducationStartDate}{endDate}";
            var department = String.IsNullOrEmpty(Model[i].Department) ? "" : " in " + Model[i].Department + " department";
            var degree = Model[i].Degree == DegreeLevel.Other ? "" : Model[i].Degree + " of ";
        }
        
        <div class="row">
            <p class="col mb-0">
                <strong>@Model[i].EducationalEstablishment</strong><br/>
            </p>
            <p class="text-end col mb-0">@date</p>
            <p class="mb-0">
                @degree@Model[i].Faculty@department<br />
                Status: <em>@Model[i].Status</em>
            </p>
            
        </div>
    </div>
    @if (i < Model.Count - 1)
    {
        <hr/>
    }
}