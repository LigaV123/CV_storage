@using CV_storage.Core.Enums
@model List<GainedSkillViewModel>

<div id="skill-section">
@for (var i = 0; i < Model.Count; i++)
{
    @Html.HiddenFor(m => m[i].Id)
    <div class="mb-3">
        @Html.LabelFor(m => m[i].Skill, "Skill")
        @Html.TextBoxFor(m => m[i].Skill, new { @class = "form-control"})
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m[i].SkillDescription, "Describe the Skill")
        @Html.TextAreaFor(m => m[i].SkillDescription, new { @class = "form-control"})
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m[i].SkillType, "Type of Skill")
        <select asp-for="@Model[i].SkillType" asp-items="Html.GetEnumSelectList<TypeOfSkill>()">
            <option value="">Please select</option>
        </Select>
        <button type="button" id="@Model[i].Id" class="btn btn-danger delete-skill">Remove The Skill</button>
    </div>
    <hr />
}
</div>
