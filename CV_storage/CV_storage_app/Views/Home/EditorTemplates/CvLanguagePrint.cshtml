@model List<LanguageKnowledgeViewModel>

<h4><strong>Language Knowledge</strong></h4>
@for (int i = 0; i < Model.Count; i++)
{
    @Html.HiddenFor(m => m[i].Id)
    <div class="row">
        <p class="col mb-0">@Model[i].Language</p>
        <p class="col mb-0 text-end">@Model[i].LanguageLevel</p>
    </div>
}