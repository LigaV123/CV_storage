@using CV_storage.Core.Enums
@model List<GainedSkillViewModel>

<h3>Soft skills</h3>
<ul>
    @for (int i = 0; i < Model.Count; i++)
    {
        @Html.HiddenFor(m => m[i].Id)
        @if (Model[i].SkillType.Value == TypeOfSkill.Soft)
        {
            <li>
                @{
                    var description = String.IsNullOrEmpty(Model[i].SkillDescription) ? "" : ": " + Model[i].SkillDescription;
                }

                @Model[i].Skill@description
            </li>
        }
    }
</ul>